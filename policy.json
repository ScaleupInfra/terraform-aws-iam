{
    "ec2_role_assume_role_policy": {
      "default": {
        "Version": "2012-10-17",
        "Statement": [
          {
            "Sid": "",
            "Effect": "Allow",
            "Principal": {
              "AWS": "*"
            },
            "Action": "sts:AssumeRole"
          }
        ]
      }
    },
    "ec2_policy": {
      "default": {
        "Version": "2012-10-17",
        "Statement": [
          {
            "Effect": "Allow",
            "Action": [
              "ec2:*"
            ],
            "Resource": "*",
            "Condition": {
              "StringEquals": {
                "aws:RequestedRegion": "ap-southeast-1"
              }
            }
          },
          {
            "Effect": "Deny",
            "Action": "ec2:*",
            "Resource": "*",
            "Condition": {
              "ForAnyValue:StringNotLike": {
                "ec2:InstanceType": [
                  "t2.micro"
                ]
              }
            }
          }
        ]
      }
    },
    "admin_policy": {
      "default": {
        "Version": "2012-10-17",
        "Statement": [
          {
            "Effect": "Allow",
            "Action": "*",
            "Resource": "*"
          }
        ]
      }
    },
    "ecr_policy": {
      "default": {
        "Version": "2012-10-17",
        "Statement": [
          {
            "Sid": "AllowECR",
            "Effect": "Allow",
            "Action": "ecr:*",
            "Resource": "*"
          }
        ]
      }
    }
  }
  